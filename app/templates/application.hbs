{{title "Code Corps"}}

{{! do we have to wrap the whole app with #drag-zone?
isn't this here mainly for updating a user's image? }}
{{#drag-zone}}
  <div class="flexbox-container">
    {{loading-bar}}
    {{! it'd be nice for the sake of consistency to rename
    'navigation-menu' to 'site-header' }}
    {{navigation-menu}}
    {{flash-messages}}
    {{#if isOnboarding}}
      <div class="site-content--start container {{codeTheme.className}}">
        {{outlet}}
      </div>
    {{else}}
      {{! is codeTheme.className needed this early in the DOM tree? }}
      {{! add flex-direction: column to site-content when looking at tasks }}
      <div class="site-content container {{codeTheme.className}} {{projectTaskBoard.className}}">
        {{outlet}}
      </div>
    {{/if}}
    {{#if shouldShowSpacer}}
      <div class="flexbox-spacer"></div>
    {{/if}}
    {{#if shouldShowFooter}}
      {{site-footer}}
    {{/if}}
  </div>
{{/drag-zone}}
