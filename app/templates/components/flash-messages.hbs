{{#each flashMessages.queue as |flash|}}
  {{#flash-message flash=flash as |component flash|}}
    {{#if flash.fixed}}
      <div class="fixed-flash">
        <div class="fixed-flash-inner">
          <p>{{flash.message}}</p>
        </div>
      </div>
    {{else}}
      <div class="full-width-container">
        <div class="container">
          <p>{{flash.message}}</p>
          <span class="close">&times;</span>
        </div>
      </div>
    {{/if}}
  {{/flash-message}}
{{/each}}
