<form>
  <h2>Join Code Corps today.</h2>

  {{signup-username-input user=user usernameValidated="usernameValidated"}}
  {{signup-email-input user=user emailValidated="emailValidated"}}
  {{signup-password-input user=user}}
  <div class="input-group">
    {{async-button
      hasError=hasError
      disabled=hasSaved
      name="signup"
      type="submit"
      value="Sign up"
      submitAction=(action "signUp")}}
  </div>
  {{#if error}}
    {{error-formatter error=error}}
  {{/if}}
</form>
